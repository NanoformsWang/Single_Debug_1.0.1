    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_below="@+id/rl_top"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="@dimen/top_small_distance"
        android:paddingLeft="@dimen/left_small_distance">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/message" />

        <ImageButton
            android:id="@+id/sel_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_small_distance"
            android:background="@null"
            android:src="@mipmap/left_close" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/line_message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_message"
        android:paddingLeft="@dimen/left_small_distance"
        android:layout_marginLeft="@dimen/left_small_distance"
        android:src="@mipmap/line" />

    <RelativeLayout
        android:id="@+id/rl_cache_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/line_message"
        android:paddingLeft="@dimen/left_small_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cache" />

        <TextView
            android:id="@+id/clear_cache_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_small_distance"
            android:src="@mipmap/left_close"
            android:text="0B" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/line_top2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_cache_btn"
        android:layout_marginTop="@dimen/top_small_small_distance"
        android:src="@mipmap/line" />

